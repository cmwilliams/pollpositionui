
@model PollPosition.Pages._ContestsModel


<div class="px-4 py-5 sm:px-6 bg-white">
    @if (Model.Contests.Count > 0)
    {
        @foreach (var contest in Model.Contests)
        {
            var officeTitle = contest.Type.ToLower() == "referendum" ? contest.ReferendumTitle : contest.Office;


            var level = contest.Level.FirstOrDefault();
            var levelName = string.Empty;
            if (!string.IsNullOrEmpty(level?.Name))
            {
                levelName = level.Name.ToLower() == "administrativearea1" ? "State" : level.Name.ToLower() == "country" ? "Federal" : string.Empty;
            }

            <div class="flex flex-col">
                <div class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8 mb-5">
                    <div class="align-middle inline-block min-w-full shadow overflow-hidden rounded-lg border-b border-gray-400">
                        <table class="min-w-full">
                            <thead>
                                <tr>
                                    <th colspan="6" class="px-6 py-3 border-b border-gray-400 bg-gray-200 text-left text-xs leading-4 font-bold text-gray-700 uppercase tracking-wider">
                                        @officeTitle
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="bg-white">
                                <tr>
                                    <td>
                                        <div class="px-4 py-5 sm:px-6">
                                            <dl class="grid grid-cols-1 col-gap-4 row-gap-8 sm:grid-cols-2">
                                                <div class="sm:col-span-1">
                                                    <dt class="text-sm leading-5 font-medium text-gray-500">
                                                        Type
                                                    </dt>
                                                    <dd class="mt-1 text-sm leading-5 text-gray-900">
                                                        @contest.Type
                                                    </dd>
                                                </div>


                                                <div class="sm:col-span-1">
                                                    <dt class="text-sm leading-5 font-medium text-gray-500">
                                                        District
                                                    </dt>
                                                    <dd class="mt-1 text-sm leading-5 text-gray-900">
                                                        @contest.District.Name
                                                    </dd>
                                                </div>
                                                @if (!string.IsNullOrEmpty(levelName))
                                                {
                                                    <div class="sm:col-span-1">
                                                        <dt class="text-sm leading-5 font-medium text-gray-500">
                                                            Level
                                                        </dt>
                                                        <dd class="mt-1 text-sm leading-5 text-gray-900">
                                                            @levelName
                                                        </dd>
                                                    </div>
                                                }
                                                @if (@contest.NumberVotingFor != null)
                                                {
                                                    <div class="sm:col-span-1">
                                                        <dt class="text-sm leading-5 font-medium text-gray-500">
                                                            Number of Seats Available
                                                        </dt>
                                                        <dd class="mt-1 text-sm leading-5 text-gray-900">
                                                            @contest.NumberVotingFor
                                                        </dd>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(contest.PrimaryParty))
                                                {
                                                    <div class="sm:col-span-1">
                                                        <dt class="text-sm leading-5 font-medium text-gray-500">
                                                            Primary Party
                                                        </dt>
                                                        <dd class="mt-1 text-sm leading-5 text-gray-900">
                                                            @contest.PrimaryParty
                                                        </dd>
                                                    </div>
                                                }

                                                @if (!string.IsNullOrEmpty(contest.BallotTitle))
                                                {
                                                    <div class="sm:col-span-1">
                                                        <dt class="text-sm leading-5 font-medium text-gray-500">
                                                            Ballot Title
                                                        </dt>
                                                        <dd class="mt-1 text-sm leading-5 text-gray-900">
                                                            @contest.BallotTitle
                                                        </dd>
                                                    </div>
                                                }

                                                @if (contest.BallotPlacement != null)
                                                {
                                                    <div class="sm:col-span-1">
                                                        <dt class="text-sm leading-5 font-medium text-gray-500">
                                                            Ballot Placement
                                                        </dt>
                                                        <dd class="mt-1 text-sm leading-5 text-gray-900">
                                                            @contest.BallotPlacement
                                                        </dd>
                                                    </div>
                                                }

                                                @if (!string.IsNullOrEmpty(contest.ElectorateSpecifications))
                                                {
                                                    <div class="sm:col-span-1">
                                                        <dt class="text-sm leading-5 font-medium text-gray-500">
                                                            Electorate Specifications
                                                        </dt>
                                                        <dd class="mt-1 text-sm leading-5 text-gray-900">
                                                            @contest.ElectorateSpecifications
                                                        </dd>
                                                    </div>
                                                }


                                                @if (!string.IsNullOrEmpty(contest.ReferendumSubtitle))
                                                {
                                                    <div class="sm:col-span-1">
                                                        <dt class="text-sm leading-5 font-medium text-gray-500">
                                                            Referendum Subtitle
                                                        </dt>
                                                        <dd class="mt-1 text-sm leading-5 text-gray-900">
                                                            @contest.ReferendumSubtitle
                                                        </dd>
                                                    </div>
                                                }

                                                @if (!string.IsNullOrEmpty(contest.ReferendumBrief))
                                                {
                                                    <div class="sm:col-span-1">
                                                        <dt class="text-sm leading-5 font-medium text-gray-500">
                                                            Referendum Brief
                                                        </dt>
                                                        <dd class="mt-1 text-sm leading-5 text-gray-900">
                                                            @contest.ReferendumBrief
                                                        </dd>
                                                    </div>
                                                }

                                                @if (contest.ReferendumBallotResponses != null)
                                                {
                                                    var response = contest.ReferendumBallotResponses.FirstOrDefault()?.Name;
                                                    @if (!string.IsNullOrEmpty(response))
                                                    {
                                                        <div class="sm:col-span-1">
                                                            <dt class="text-sm leading-5 font-medium text-gray-500">
                                                                Referendum Ballot Responses
                                                            </dt>
                                                            <dd class="mt-1 text-sm leading-5 text-gray-900">
                                                                @response
                                                            </dd>
                                                        </div>
                                                    }
                                                }

                                                @if (!string.IsNullOrEmpty(contest.ReferendumConStatement))
                                                {
                                                    <div class="sm:col-span-1">
                                                        <dt class="text-sm leading-5 font-medium text-gray-500">
                                                            Referendum Con Statement
                                                        </dt>
                                                        <dd class="mt-1 text-sm leading-5 text-gray-900">
                                                            @contest.ReferendumConStatement
                                                        </dd>
                                                    </div>
                                                }

                                                @if (!string.IsNullOrEmpty(contest.ReferendumEffectOfAbstain))
                                                {
                                                    <div class="sm:col-span-1">
                                                        <dt class="text-sm leading-5 font-medium text-gray-500">
                                                            Referendum Effect Of Abstain
                                                        </dt>
                                                        <dd class="mt-1 text-sm leading-5 text-gray-900">
                                                            @contest.ReferendumEffectOfAbstain
                                                        </dd>
                                                    </div>
                                                }

                                                @if (!string.IsNullOrEmpty(contest.ReferendumPassageThreshold))
                                                {
                                                    <div class="sm:col-span-1">
                                                        <dt class="text-sm leading-5 font-medium text-gray-500">
                                                            Referendum Passage Threshold
                                                        </dt>
                                                        <dd class="mt-1 text-sm leading-5 text-gray-900">
                                                            @contest.ReferendumPassageThreshold
                                                        </dd>
                                                    </div>
                                                }

                                                @if (!string.IsNullOrEmpty(contest.ReferendumProStatement))
                                                {
                                                    <div class="sm:col-span-1">
                                                        <dt class="text-sm leading-5 font-medium text-gray-500">
                                                            Referendum Pro Statement
                                                        </dt>
                                                        <dd class="mt-1 text-sm leading-5 text-gray-900">
                                                            @contest.ReferendumProStatement
                                                        </dd>
                                                    </div>
                                                }

                                                @if (!string.IsNullOrEmpty(contest.ReferendumText))
                                                {
                                                    <div class="sm:col-span-1">
                                                        <dt class="text-sm leading-5 font-medium text-gray-500">
                                                            Referendum Text
                                                        </dt>
                                                        <dd class="mt-1 text-sm leading-5 text-gray-900">
                                                            @contest.ReferendumText
                                                        </dd>
                                                    </div>
                                                }


                                                @if (!string.IsNullOrEmpty(contest.ReferendumUrl))
                                                {
                                                    <div class="sm:col-span-1">
                                                        <dt class="text-sm leading-5 font-medium text-gray-500">
                                                            Referendum Link
                                                        </dt>
                                                        <dd class="mt-1 text-sm leading-5 text-gray-900">
                                                            <a href="@contest.ReferendumUrl" target="_blank">Website</a>
                                                        </dd>
                                                    </div>
                                                }
                                            </dl>
                                        </div>

                                    </td>
                                </tr>
                                @if (contest.Candidates.Count > 0)
                                {
                                    <tr>
                                        <td colspan="6" class="px-6 py-3 border-b border-gray-400 bg-gray-200 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                                            Candidates
                                        </td>
                                    </tr>
                                    @foreach (var candidate in contest.Candidates)
                                    {
                                        var facebookLink = candidate.Channels.FirstOrDefault(x => x.Type.ToLower() == "facebook");
                                        var twitterLink = candidate.Channels.FirstOrDefault(x => x.Type.ToLower() == "twitter");

                                        <tr>
                                            <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200 text-sm leading-5 font-medium text-gray-900">

                                                <div class="flex items-center">
                                                    <div class="min-w-0 flex-1 flex items-center">
                                                        <div class="flex-shrink-0">
                                                            @if (!string.IsNullOrEmpty(candidate.PhotoUrl))
                                                            {
                                                                <img class="w-14 rounded" src="@candidate.PhotoUrl" alt="" />
                                                            }
                                                            else
                                                            {
                                                                <img class="w-14 rounded" src="~/img/generic.png" alt="" />
                                                            }
                                                        </div>

                                                        <div class="min-w-0 flex-1 px-4 md:grid md:grid-cols-2 md:gap-4">
                                                            <div>
                                                                <div class="text-sm leading-5 font-medium text-indigo-600 truncate">@candidate.Name</div>
                                                                <div class="mt-1 flex items-center text-sm leading-5 text-gray-500">
                                                                    <div class="sm:flex">
                                                                        <div class="mr-6 flex items-center text-sm leading-5 text-gray-500">
                                                                            @candidate.Party
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                @if (candidate.OrderOnBallot != null)
                                                                {
                                                                    <div class="mt-1 flex items-center text-sm leading-5 text-gray-500">
                                                                        <div class="sm:flex">
                                                                            <div class="mr-6 flex items-center text-sm leading-5 text-gray-500">
                                                                                Ballot Order: @candidate.OrderOnBallot
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                }
                                                                <div class="mt-2 flex items-center text-sm leading-5 text-gray-500">
                                                                    @if (!string.IsNullOrEmpty(candidate.Email))
                                                                    {
                                                                        <a href="mailto:@candidate.Email" target="_blank">
                                                                            <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                                                                <path fill-rule="evenodd" d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884zM18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" clip-rule="evenodd" />
                                                                            </svg>
                                                                        </a>
                                                                    }

                                                                    @if (!string.IsNullOrEmpty(candidate.CandidateUrl))
                                                                    {
                                                                        <a href="@candidate.CandidateUrl" target="_blank">
                                                                            <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
                                                                                <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" class="w-8 h-8"><path d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path></svg>
                                                                            </svg>
                                                                        </a>
                                                                    }

                                                                    @if (facebookLink != null)
                                                                    {
                                                                        <a href="@facebookLink.Id" target="_blank">
                                                                            <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
                                                                                <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
                                                                            </svg>
                                                                        </a>
                                                                    }

                                                                    @if (twitterLink != null)
                                                                    {
                                                                        <a href="@twitterLink.Id" target="_blank">
                                                                            <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
                                                                                <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
                                                                            </svg>
                                                                        </a>
                                                                    }

                                                                    @if (!string.IsNullOrEmpty(candidate.Phone))
                                                                    {
                                                                        <a href="tel:@candidate.Phone">
                                                                            <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
                                                                                <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" class="w-8 h-8"><path d="M16 3h5m0 0v5m0-5l-6 6M5 3a2 2 0 00-2 2v1c0 8.284 6.716 15 15 15h1a2 2 0 002-2v-3.28a1 1 0 00-.684-.948l-4.493-1.498a1 1 0 00-1.21.502l-1.13 2.257a11.042 11.042 0 01-5.516-5.517l2.257-1.128a1 1 0 00.502-1.21L9.228 3.683A1 1 0 008.279 3H5z"></path></svg>
                                                                            </svg>
                                                                        </a>
                                                                    }
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    }
</div>
