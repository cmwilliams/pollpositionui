@model PollPosition.Pages._StateModel

@if (Model.States.Count > 0)
{
    <div class="px-4 py-5 sm:px-6 bg-white">
        @foreach (var state in Model.States)
        {
            <div class="flex flex-col">
                <div class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8 mb-5">
                    <div class="align-middle inline-block min-w-full shadow overflow-hidden rounded-lg border-b border-gray-400">
                        <table class="min-w-full">
                            <thead>
                                <tr>
                                    <th colspan="6" class="px-6 py-3 border-b border-gray-400 bg-gray-200 text-left text-xs leading-4 font-bold text-gray-700 uppercase tracking-wider">
                                        @state.Name
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="bg-white">
                                <tr>
                                    <td>
                                        <div class="px-4 py-5 sm:px-6">
                                            <dl class="grid grid-cols-1 col-gap-4 row-gap-8 sm:grid-cols-2">

                                                @if (!string.IsNullOrEmpty(state.ElectionAdministrationBody.Name))
                                                {
                                                    <div class="sm:col-span-1">
                                                        <dt class="text-sm leading-5 font-medium text-gray-500">
                                                            Name
                                                        </dt>
                                                        <dd class="mt-1 text-sm leading-5 text-gray-900">
                                                            @state.ElectionAdministrationBody.Name
                                                        </dd>
                                                    </div>
                                                }

                                                @if (!string.IsNullOrEmpty(state.ElectionAdministrationBody.ElectionInfoUrl))
                                                {
                                                    <div class="sm:col-span-1">
                                                        <dt class="text-sm leading-5 font-medium text-gray-500">
                                                            Election Information Link
                                                        </dt>
                                                        <dd class="mt-1 text-sm leading-5 text-gray-900">
                                                            <a href=" @state.ElectionAdministrationBody.ElectionInfoUrl" target="_blank">Website</a>
                                                        </dd>
                                                    </div>
                                                }

                                                @if (!string.IsNullOrEmpty(state.ElectionAdministrationBody.VotingLocationFinderUrl))
                                                {
                                                    <div class="sm:col-span-1">
                                                        <dt class="text-sm leading-5 font-medium text-gray-500">
                                                            Voting Location Finder Link
                                                        </dt>
                                                        <dd class="mt-1 text-sm leading-5 text-gray-900">
                                                            <a href=" @state.ElectionAdministrationBody.VotingLocationFinderUrl" target="_blank">Website</a>
                                                        </dd>
                                                    </div>
                                                }

                                                @if (!string.IsNullOrEmpty(state.ElectionAdministrationBody.BallotInfoUrl))
                                                {
                                                    <div class="sm:col-span-1">
                                                        <dt class="text-sm leading-5 font-medium text-gray-500">
                                                            Ballot Information Link
                                                        </dt>
                                                        <dd class="mt-1 text-sm leading-5 text-gray-900">
                                                            <a href=" @state.ElectionAdministrationBody.BallotInfoUrl" target="_blank">Website</a>
                                                        </dd>
                                                    </div>
                                                }

                                                @if (state.ElectionAdministrationBody.CorrespondenceAddress != null)
                                                {
                                                    <div class="sm:col-span-1">
                                                        <dt class="text-sm leading-5 font-medium text-gray-500">
                                                            Address
                                                        </dt>
                                                        <dd class="mt-1 text-sm leading-5 text-gray-900">
                                                            @state.ElectionAdministrationBody.CorrespondenceAddress.Street<br />
                                                            @state.ElectionAdministrationBody.CorrespondenceAddress.City,  @state.ElectionAdministrationBody.CorrespondenceAddress.State  @state.ElectionAdministrationBody.CorrespondenceAddress.Zip
                                                        </dd>
                                                    </div>
                                                }
                                            </dl>
                                        </div>
                                    </td>
                                </tr>
                                @if (state.LocalJurisdiction != null)
                                {
                                    <tr>
                                        <td colspan="6" class="px-6 py-3 border-b border-gray-400 bg-gray-200 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                                            @state.LocalJurisdiction.Name
                                        </td>
                                    </tr>
                                    @if (state.LocalJurisdiction.ElectionAdministrationBody != null)
                                    {
                                        var localAdminBody = state.LocalJurisdiction.ElectionAdministrationBody;
                                        <tr>
                                            <td>
                                                <div class="px-4 py-5 sm:px-6">
                                                    <dl class="grid grid-cols-1 col-gap-4 row-gap-8 sm:grid-cols-2">

                                                        @if (!string.IsNullOrEmpty(localAdminBody.ElectionInfoUrl))
                                                        {
                                                            <div class="sm:col-span-1">
                                                                <dt class="text-sm leading-5 font-medium text-gray-500">
                                                                    Election Information Link
                                                                </dt>
                                                                <dd class="mt-1 text-sm leading-5 text-gray-900">
                                                                    <a href=" @localAdminBody.ElectionInfoUrl" target="_blank">Website</a>
                                                                </dd>
                                                            </div>
                                                        }

                                                        @if (localAdminBody.PhysicalAddress != null)
                                                        {
                                                            <div class="sm:col-span-1">
                                                                <dt class="text-sm leading-5 font-medium text-gray-500">
                                                                    Address
                                                                </dt>
                                                                <dd class="mt-1 text-sm leading-5 text-gray-900">
                                                                    @localAdminBody.PhysicalAddress.Street <br />
                                                                    @localAdminBody.PhysicalAddress.City,  @localAdminBody.PhysicalAddress.State  @localAdminBody.PhysicalAddress.Zip
                                                                </dd>
                                                            </div>
                                                        }
                                                        </dl>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="6" class="px-6 py-3 border-b border-gray-400 bg-gray-200 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                                                Election Officials Information
                                            </td>
                                        </tr>
                                        @foreach (var electionOfficial in localAdminBody.ElectionOfficials)
                                        {
                                            <tr>
                                                <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200 text-sm leading-5 font-medium text-gray-900">

                                                    <div class="flex items-center">
                                                        <div class="min-w-0 flex-1 flex items-center">
                                                            @*<div class="flex-shrink-0">
                                                                    <img class="w-14 rounded" src="~/img/generic.png" alt="" />
                                                                </div>*@

                                                            <div class="min-w-0 flex-1 px-4 md:grid md:grid-cols-2 md:gap-4">
                                                                <div>
                                                                    @if (!string.IsNullOrEmpty(electionOfficial.Name))
                                                                    {
                                                                        <div class="text-sm leading-5 font-medium text-indigo-600 truncate">@electionOfficial.Name</div>

                                                                    }
                                                                    <div class="mt-2 flex items-center text-sm leading-5 text-gray-500">
                                                                        @if (!string.IsNullOrEmpty(electionOfficial.EmailAddress))
                                                                        {
                                                                            <a href="mailto:@electionOfficial.EmailAddress" target="_blank">
                                                                                <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                                                                    <path fill-rule="evenodd" d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884zM18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" clip-rule="evenodd" />
                                                                                </svg>
                                                                            </a>
                                                                        }
                                                                        @if (!string.IsNullOrEmpty(electionOfficial.OfficePhoneNumber))
                                                                        {
                                                                            <a href="tel:@electionOfficial.OfficePhoneNumber">
                                                                                <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
                                                                                    <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" class="w-8 h-8"><path d="M16 3h5m0 0v5m0-5l-6 6M5 3a2 2 0 00-2 2v1c0 8.284 6.716 15 15 15h1a2 2 0 002-2v-3.28a1 1 0 00-.684-.948l-4.493-1.498a1 1 0 00-1.21.502l-1.13 2.257a11.042 11.042 0 01-5.516-5.517l2.257-1.128a1 1 0 00.502-1.21L9.228 3.683A1 1 0 008.279 3H5z"></path></svg>
                                                                                </svg>
                                                                            </a>
                                                                        }
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
}